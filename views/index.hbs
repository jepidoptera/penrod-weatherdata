<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Weather @ Penrod</title>
    <link rel="stylesheet" type="text/css" href="/assets/styles/salesforce-lightning-design-system.css" />
    <link rel="stylesheet" type="text/css" href="/css/index.css" />
    <script src="js/formEvents.js"></script>
</head>
<body style="text-align: center">
    <div class="slds-grid slds-grid_align-center">
    <div class="slds-col slds-size_1-of-1">

    <!-- city chooser form -->
    <fieldset class="slds-form-element">
        <legend class="slds-form-element__label slds-align_absolute-center main_title" style="font-size: 16pt">
            Select a city to view local weather conditions
        </legend>

        <form class="slds-form-element__control slds-m-around_large" name="city_select">
            {{#each cities}}
                <!-- visual picker element, one for each city -->
                <div class="slds-visual-picker slds-visual-picker_medium slds-m-around_large">
                    <input type="radio" id="visual-picker-{{@index}}" onchange="selectCity('{{name}}', {{id}})"/>
                    <label for="visual-picker-{{@index}}">
                        <img class="custom-button-img" src="/assets/images/cities/{{name}}.png" alt="{{name}}">
                        <span class="slds-visual-picker__body" style="width: 100%;">
                            <span class="slds-text-title" style="font-size: 14pt; text-align: center">
                                {{name}}
                            </span>
                        </span>
                    </label>
                </div>
            {{/each}}
        </form>
    </fieldset>
        <br>
        <h1>
            Penrod Salesforce Consulting has offices in four American cities.  Naturally, your first question is: what's the weather like?
        </h1>
    </div>

    <!--loading icon overlay 
        appears when a city is chosen -->
        <div id="loading_overlay">
            <div class="slds-grid  slds-align_absolute-center" style="height:100%">
                <div class="demo-only demo-only demo-only_viewport" style="height:6rem">
                <div role="status" class="slds-spinner slds-spinner_medium">
                    <span class="slds-assistive-text">Loading</span>
                    <div class="slds-spinner__dot-a"></div>
                    <div class="slds-spinner__dot-b"></div>
                </div>
                </div>
            </div>
        </div>
    </div>
</body>
